<%= render 'layouts/error_messages', model: @book %>

<h2>User info</h2>
<!--画像が存在しない場合、noimageを表示-->
<table class="table table-user">
<thead>
  <tr>
  <%= attachment_image_tag user, :image, size:"100x100", fallback: 'noimage.jpg' %>
  </tr>
</thead>

<tbody>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>

  <tr>
    <th>Introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
      <th colspan="2">
        <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      </th>
  </tr>
</tbody>
</table>