<div class="container">
  <div class="row">
    <div class="col-lg-3">
        <%= render 'users/user', user: @user %>
        <%= render 'books/book', books: @book %>
    </div>

    <div class="col-lg-9">
        <h2>Books</h2>
            <table class="table table-user-show">
                <thead>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </thead>

                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(@user) do %>
                                <%= attachment_image_tag @user, :image, size:"80x80", fallback: 'noimage.jpg' %>
                                <% end %>
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>